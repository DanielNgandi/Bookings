generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // stored in .env
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  clients  Client[]
  hotels   Hotel[]
  bookings Booking[]
}

model Client {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  company   String?
  email     String?
  phone     String?
  country   String?
  address   String? 
  createdAt DateTime @default(now())

  user     User    @relation(fields: [userId], references: [id])
  bookings Booking[]
  
}

model Hotel {
  id          Int      @id @default(autoincrement())
  userId      Int
  name        String
  location    String?
  email       String?
  phone       String?
  mpesaNumber String?
  bankDetails String?
  createdAt   DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id])
  bookings Booking[]
}

model Booking {
  id          Int      @id @default(autoincrement())
  userId      Int
  clientId    Int
  hotelId     Int
  checkIn     DateTime
  checkOut    DateTime
  rooms       Int
  totalAmount Float
  status      BookingStatus @default(PENDING)
  
  reference       String?   // Ref: DB BFK
  invoiceDate     DateTime? // invoice date
  lastPaymentDate DateTime? // payment deadline
  notes           String?
  createdAt   DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  client  Client  @relation(fields: [clientId], references: [id])
  hotel   Hotel   @relation(fields: [hotelId], references: [id])

items BookingItem[]

  payment Payment?
  invoice Invoice?
  voucher Voucher?
  receipt Receipt?
}

model BookingItem {
  id        Int      @id @default(autoincrement())
  bookingId Int
  date      DateTime
  service   String   // Safari Adults, Charter etc
  pax       Int
  costPP    Float
  amount    Float

  createdAt DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
}

model Payment {
  id            Int      @id @default(autoincrement())
  bookingId     Int      @unique
  amount        Float
  method        PaymentMethod
  transactionId String?
  paymentDate   DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id])
}

model Invoice {
  id            Int      @id @default(autoincrement())
  bookingId     Int      @unique
  invoiceNumber String   @unique
  pdfPath       String?
  createdAt     DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id])
}

model Voucher {
  id            Int      @id @default(autoincrement())
  bookingId     Int      @unique
  voucherNumber String   @unique
  pdfPath       String?
  createdAt     DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id])
}

model Receipt {
  id            Int      @id @default(autoincrement())
  bookingId     Int      @unique
  receiptNumber String   @unique
  pdfPath       String?
  createdAt     DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id])
}

enum BookingStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentMethod {
  MPESA
  BANK
}
